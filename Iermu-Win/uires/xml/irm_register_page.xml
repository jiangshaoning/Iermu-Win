<include>
  <!--register -->
  <window pos="0,0,-0,-0" colorBkgnd="@color/white">
    <window pos="0,[5,-0,@50">
      <imgbtn name="btn_back" skin="back_btn" pos="5, |0" offset="0.5, -0.5" ></imgbtn>
      <text  pos="|0, |0" offset="-0.5,-0.5" font="bold:1,size:18" >@string/register</text>
      <imgbtn name="text_login" skin="white_btn_bg" pos="-60, 0, -20, -0" colorText="@color/blue">@string/login</imgbtn>
    </window>
    <hr pos="0,[1,-0,@2" lineStyle="solid" mode="horizontal" colorLine="@color/gray" size="2"/>
    
    <window pos="0,[40,-0,@30">
      <img  skin="icon_user" pos="30, |0" offset="-0.5,-0.5" ></img>
      <edit pos="[20, 2, -100, -0" tip="@string/input_name" cueText="@string/input_name"></edit>
      <!-->button  pos="-20, |0" offset="-1,-0.5" width="80" height="30" >@string/show_password</button-->
      <hr pos="20,[5,-30,@2" lineStyle="solid" mode="horizontal" colorLine="@color/gray" size="1"/>
    </window>

    <window pos="0,[20,-0,@30">
      <text  pos="30, |0" offset="-0.5,-0.5" >@string/eight_six</text>
      <hr pos="[3, 0, 3,-0" lineStyle="solid" mode="vertical" colorLine="@color/gray" size="1"/>
      <edit pos="60, 2, -100, -0" number="1" maxBuf="11" tip="@string/input_number" cueText="@string/input_number"></edit>
      <hr pos="20,[5,-30,@2" lineStyle="solid" mode="horizontal" colorLine="@color/gray" size="1"/>
    </window>

    <window pos="0,[20,-0,@30">
      <img  skin="icon_message" pos="30, |0" offset="-0.5,-0.5" ></img>
      <edit pos="[20, 2, -130, -0"  tip="@string/input_ver_code" cueText="@string/input_ver_code"></edit>
      <hr pos="[10, 0, 3,-3" lineStyle="solid" mode="vertical" colorLine="@color/gray" size="1"/>
      <imgbtn name="text_ver_code" skin="white_btn_bg" pos="-110, 0, -30, -0" colorText="@color/blue">@string/get_ver_code</imgbtn>
      <!-->button  pos="-20, |0" offset="-1,-0.5" width="80" height="30" >@string/show_password</button-->
      <hr pos="20,[5,-30, @2" lineStyle="solid" mode="horizontal" colorLine="@color/gray" size="1"/>
    </window>

    <window pos="0,[20,-0,@30">
      <img  skin="icon_password" pos="30, |0" offset="-0.5,-0.5" ></img>
      <edit name="reg_edit_passwd" pos="[20, 2, -130, -0" maxBuf="20" password="1" tip="@string/input_6_20_password" cueText="@string/input_6_20_password"></edit>
      <hr pos="[10, 0, 3,-3" lineStyle="solid" mode="vertical" colorLine="@color/gray" size="1"/>
      <imgbtn name="reg_show_passwd" skin="white_btn_bg" pos="-110, 0, -30, -0" colorText="@color/blue">@string/show_password</imgbtn>
      <!-->button  pos="-20, |0" offset="-1,-0.5" width="80" height="30" >@string/show_password</button-->
      <hr pos="20,[5,-30,@2" lineStyle="solid" mode="horizontal" colorLine="@color/gray" size="1"/>
    </window>
 
    <imgbtn name="btn_register_ok" skin="bule_btn" pos="30, [30, -30, @40" colorText="@color/white" >@string/register</imgbtn>

  </window>

</include>